<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled state -->
    <item android:drawable="@drawable/border_buy_data" android:state_enabled="false" />

    <!-- enabled and pressed state -->
    <item android:drawable="@drawable/border_buy_data_focused" android:state_enabled="true" android:state_pressed="true" />

    <!-- enabled and focused state -->
    <item android:drawable="@drawable/border_buy_data_focused" android:state_enabled="true" android:state_focused="true" />

    <!-- enabled state -->
    <item android:drawable="@drawable/border_buy_data" android:state_enabled="true" />

</selector>
