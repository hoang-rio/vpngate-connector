<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PaidServer" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPaidServer</item>
        <item name="colorPrimaryDark">@color/colorPaidServer</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.SplashScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhiteTransparent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="label">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.VPNItem">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.BottomSheetDialog">
        <item name="android:textSize">15sp</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="AppTheme.Setting">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.Setting.Item">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="AppTheme.Setting.Line">
        <item name="android:background">@color/lineColor</item>
    </style>

    <style name="AppTheme.Setting.SubText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.Link">
        <item name="android:textColor">@color/colorLink</item>
    </style>

    <style name="AppTheme.Heading">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
</resources>
